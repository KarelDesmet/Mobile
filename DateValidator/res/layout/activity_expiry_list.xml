<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expiry_list_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:padding="@dimen/tiny_margin">

        <ImageButton
            android:id="@+id/yesterday"
            android:layout_width="@dimen/day_button"
            android:layout_height="@dimen/day_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/day_of_the_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/date"
            android:textColor="#fff"
            android:textSize="@dimen/small_title"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/tomorrow"
            android:layout_width="@dimen/day_button"
            android:layout_height="@dimen/day_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

    <ListView
        android:id="@+id/expiryList_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>