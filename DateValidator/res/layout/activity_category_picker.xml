<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#686868">

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:background="#686868"
        android:gravity="center_horizontal"
        android:text="@string/categorypicker_title"
        android:textSize="@dimen/title"
        android:textColor="#fff"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/category_buttons_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ultimate_margin"
        android:layout_marginLeft="@dimen/ultimate_margin"
        android:layout_marginEnd="@dimen/ultimate_margin"
        android:layout_marginRight="@dimen/ultimate_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/title"
        android:background="#686868">

    </ListView>
</LinearLayout>