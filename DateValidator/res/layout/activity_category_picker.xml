<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868">

    <LinearLayout
        android:id="@+id/CategoriesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            android:gravity="center_horizontal"
            android:text="@string/categorypicker_title"
            android:textSize="@dimen/title"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/great_margin"
            android:layout_marginRight="@dimen/great_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="#c55746"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/charcuterie"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/great_margin"
            android:layout_marginRight="@dimen/great_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="#35d0ff"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/freezer"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/great_margin"
            android:layout_marginRight="@dimen/great_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="#ffff35"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="@string/cheese"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/great_margin"
            android:layout_marginRight="@dimen/great_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="#ffa135"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/nutrition"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/great_margin"
            android:layout_marginRight="@dimen/great_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="#eeeeee"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="@string/dairy"/>

    </LinearLayout>


</ScrollView>
