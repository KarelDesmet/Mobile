<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_list_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/tiny_margin"
        android:textColor="#000"
        android:textSize="@dimen/small_title"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/tiny_margin"
        android:orientation="vertical"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/very_tiny_margin"
                android:text="@string/barcode"
                android:textColor="#fff"
                android:textSize="@dimen/tiny_title"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/barcode_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/very_tiny_margin"
                android:background="#fff"
                android:hint="@string/barcode_hint"
                android:inputType="number"
                android:maxLength="13"
                android:paddingLeft="@dimen/very_tiny_margin"
                android:paddingRight="@dimen/very_tiny_margin"
                android:textColor="#000"
                android:textSize="@dimen/tiny_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/naam"
                android:textColor="#fff"
                android:textSize="@dimen/tiny_title"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/very_tiny_margin"
                android:maxLength="27"
                android:background="#fff"
                android:paddingLeft="@dimen/very_tiny_margin"
                android:paddingRight="@dimen/very_tiny_margin"
                android:textColor="#000"
                android:maxLines="1"
                android:textSize="@dimen/tiny_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/hope"
                android:textColor="#fff"
                android:textSize="@dimen/tiny_title"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hope_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:layout_marginTop="@dimen/very_tiny_margin"
                android:background="#fff"
                android:inputType="number"
                android:paddingLeft="@dimen/very_tiny_margin"
                android:paddingRight="@dimen/very_tiny_margin"
                android:textColor="#000"
                android:textSize="@dimen/tiny_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/datum"
                android:textColor="#fff"
                android:textSize="@dimen/tiny_title"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/tiny_margin"
                android:paddingTop="@dimen/very_tiny_margin">

                <ImageButton
                    android:id="@+id/previous_day"
                    android:layout_width="@dimen/day_button"
                    android:layout_height="@dimen/day_button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left_arrow" />

                <EditText
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:hint="@string/default_day"
                    android:maxLength="2"
                    android:inputType="number"
                    android:paddingLeft="@dimen/very_tiny_margin"
                    android:paddingRight="@dimen/very_tiny_margin"
                    android:textColor="#000"
                    android:textSize="@dimen/tiny_title" />

                <ImageButton
                    android:id="@+id/next_day"
                    android:layout_width="@dimen/day_button"
                    android:layout_height="@dimen/day_button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/very_tiny_margin"
                    android:paddingRight="@dimen/very_tiny_margin"
                    android:text="@string/slash"
                    android:textColor="#fff"
                    android:textSize="@dimen/tiny_title"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/previous_month"
                    android:layout_width="@dimen/day_button"
                    android:layout_height="@dimen/day_button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left_arrow" />

                <EditText
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:hint="@string/default_month"
                    android:maxLength="2"
                    android:inputType="number"
                    android:paddingLeft="@dimen/very_tiny_margin"
                    android:paddingRight="@dimen/very_tiny_margin"
                    android:textColor="#000"
                    android:textSize="@dimen/tiny_title" />

                <ImageButton
                    android:id="@+id/next_month"
                    android:layout_width="@dimen/day_button"
                    android:layout_height="@dimen/day_button"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/very_tiny_margin"
                    android:paddingRight="@dimen/very_tiny_margin"
                    android:text="@string/slash"
                    android:textColor="#fff"
                    android:textSize="@dimen/tiny_title"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:hint="@string/default_year"
                    android:maxLength="4"
                    android:inputType="number"
                    android:paddingLeft="@dimen/very_tiny_margin"
                    android:paddingRight="@dimen/very_tiny_margin"
                    android:textColor="#000"
                    android:textSize="@dimen/tiny_title" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expiry_product_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/tiny_margin"
                android:background="#87f717"
                android:text="@string/voegtoe"
                android:textColor="#000"
                android:textSize="@dimen/tiny_title" />

            <Button
                android:id="@+id/removeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/tiny_margin"
                android:background="#C11B17"
                android:layout_gravity="center_vertical"
                android:text="@string/verwijder"
                android:textColor="#fff"
                android:textSize="@dimen/tiny_title" />

        </LinearLayout>

