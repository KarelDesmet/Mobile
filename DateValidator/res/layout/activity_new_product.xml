        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/previous_product"
                android:layout_width="@dimen/day_button"
                android:layout_height="@dimen/day_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="@dimen/tiny_title"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/next_product"
                android:layout_width="@dimen/day_button"
                android:layout_height="@dimen/day_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/previous_fridge"
                android:layout_width="@dimen/day_button"
                android:layout_height="@dimen/day_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/fridge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/frigo"
                android:textColor="#fff"
                android:textSize="@dimen/tiny_title"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/next_fridge"
                android:layout_width="@dimen/day_button"
                android:layout_height="@dimen/day_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
